{
  "$schema": "https://biomejs.dev/schemas/2.4.0/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "globals": ["$", "L"]
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/app/js/map.js",
      "!**/app/css",
      "!**/*.min.js",
      "!**/*.min.css",
      "!**/data.db",
      "!**/pnpm-lock.yaml",
      "!**/pokemons",
      "!**/hash_test",
      "!**/*.csv",
      "!**/*.sql",
      "!**/data",
      "!**/scripts",
      "!**/dist",
      "!**/server"
    ]
  }
}
